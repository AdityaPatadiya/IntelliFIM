# DB_POOL_SIZE=<your_db_pool_size>
# DB_HOST=<your_db_host>
# DB_USER=<your_db_user>
# DB_PASSWORD=<your_db_password>
# DB_NAME=<your_db_name>
# AUTH_DB_NAME=<your_auth_db_name>

# # generate the secret key using: 
# # ```import secrets; 
# #    secrets.token_hex(32)```
# SECRET_KEY=<your_secret_key>

# # for password, if you're using special characters like '@', make sure to URL encode them
# AUTH_DATABASE_URL=mysql+pymysql://DB_USER:<db_password>@localhost/AUTH_DB_NAME
# FIM_DATABASE_URL=mysql+pymysql://DB_USER:<db_password>@localhost/<DB_NAME


# ==================== ENVIRONMENT ====================
ENVIRONMENT=development  # development, staging, production
DEBUG=True
DEBUG_SQL=False

# ==================== SECURITY ====================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,::1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== DATABASE - MAIN ====================
# Development
DB_ENGINE=django.db.backends.mysql
DB_NAME=fim_db
DB_USER=fim_user
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=3306

# Pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_CONN_MAX_AGE=300

# ==================== DATABASE - AUTH ====================
# Use separate auth DB or same as main
AUTH_DB_ENGINE=django.db.backends.mysql
AUTH_DB_NAME=auth_db
AUTH_DB_USER=fim_user
AUTH_DB_PASSWORD=your_db_password_here
AUTH_DB_HOST=localhost
AUTH_DB_PORT=3306

# ==================== CELERY & REDIS ====================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=False  # Set to True for testing (no Celery)

# ==================== EMAIL ====================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # For dev
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ==================== FILE MONITORING ====================
FIM_LOG_DIR=./logs
FIM_BACKUP_DIR=./backups
FIM_MAX_FILE_SIZE=104857600  # 100MB in bytes
FIM_SCAN_INTERVAL=300  # 5 minutes in seconds
FIM_HASH_ALGORITHM=sha256

# ==================== SECURITY HEADERS ====================
SECURE_HSTS_SECONDS=0  # 0 for dev, 31536000 for prod (1 year)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ==================== MONITORING ====================
SENTRY_DSN=  # Leave empty for no Sentry
LOGGING_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ==================== CUSTOM ====================
FIM_REPORT_DIR=./reports
FIM_ARCHIVE_DAYS=30
FIM_WORKER_COUNT=4
